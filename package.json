{
  "name": "aero-logic1",
  "description": "A kata to practice Test Driven Development with React",
  "private": true,
  "version": "1.0.0",
  "author": {
    "name": "Nik Sumeiko",
    "url": "https://withnik.com"
  },
  "type": "module",
  "scripts": {
    "start": "concurrently --kill-others \"npm run start:server\" \"npx vite\"",
    "start:server": "json-server db.json",
    "build": "tsc && vite build",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}' --report-unused-disable-directives --fix",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,md}'",
    "preview": "vite preview",
    "test:unit": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:integration": "cypress open --component --browser electron"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.10",
    "autoprefixer": "^10.4.22",
    "classnames": "^2.5.1",
    "dotenv": "^17.2.3",
    "random-int": "^3.1.0",
    "random-item": "^4.0.1",
    "random-object-key": "^4.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6",
    "riddle-exam": "file:packages/riddle-exam"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@tailwindcss/vite": "^4.1.17",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "@types/yargs": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "@vitest/coverage-v8": "^4.0.13",
    "@vitest/ui": "^4.0.13",
    "concurrently": "^9.2.1",
    "cypress": "^15.7.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-cypress": "^5.2.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "json-server": "1.0.0-beta.3",
    "msw": "^2.12.10",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "sass-embedded": "^1.93.3",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.13"
  }
}
